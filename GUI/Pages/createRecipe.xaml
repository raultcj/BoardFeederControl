<UserControl x:Class="GUI.Pages.createRecipe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Recipe ID" Style="{StaticResource Heading2}" />
                <TextBox x:Name="recipeID"></TextBox>
                <TextBlock Text="Board Width" Style="{StaticResource Heading2}" />
                <TextBox x:Name="recipeWidth"></TextBox>
                <TextBlock Text="Board Template" Style="{StaticResource Heading2}" />
                <TextBox x:Name="recipeTemp"></TextBox>
                <Button x:Name="browseFile" Click="browseFile_Click">Browse...</Button>
                <Separator Height="20"></Separator>
                <Button x:Name="submitButton" Click="submitButton_Click">Submit</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>