<UserControl x:Class="GUI.Pages.UserInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <StackPanel>
            <TextBlock Text="Name" Style="{StaticResource Heading2}" />
            <TextBlock x:Name="_name" Padding="10" />
            <Separator Height="20"></Separator>
            <TextBlock Text="Position" Style="{StaticResource Heading2}" />
            <TextBlock x:Name="_position" Padding="10" />
            <Separator Height="20"></Separator>
            <TextBlock Text="Supervisor" Style="{StaticResource Heading2}" />
            <TextBlock x:Name="_supervisor" Padding="10" />
        </StackPanel>
    </Grid>
</UserControl>